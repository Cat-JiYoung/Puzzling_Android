<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_item_retrospect_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임최대10자보이.."
        android:textAppearance="@style/Kor.Body3.Bold"
        android:includeFontPadding="false"
        android:layout_marginVertical="14dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_item_retrospect_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="역할도최대10자고이후.."
        android:textAppearance="@style/Kor.Body3.Regular"
        android:includeFontPadding="false"
        android:layout_marginVertical="14dp"
        android:layout_marginStart="184dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_200"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>