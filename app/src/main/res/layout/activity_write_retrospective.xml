<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.puzzling.puzzlingaos.presentation.writeRetrospective.WriteRetrospectiveViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.writeRetrospective.WriteRetrospectiveActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_write_retrospective"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_write_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:src="@drawable/ic_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_write_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="72dp"
                    android:layout_marginVertical="11dp"
                    android:includeFontPadding="false"
                    android:text="@string/tv_write_title"
                    android:textAppearance="@style/Kor.Heading4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_write_register"
                    app:layout_constraintStart_toEndOf="@id/btn_write_back"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_write_register"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:includeFontPadding="false"
                    android:paddingVertical="12dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="8dp"
                    android:text="@string/tv_write_register"
                    android:textAppearance="@style/Kor.Body1.Bold"
                    android:textColor="@{vm.isInputEnabled ?  @color/blue_400 : @color/gray_400}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_write_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_write_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tb_write_retrospective">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_write_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="258dp"
                android:background="@drawable/rect_bg50_fill_radius_16"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_write_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="6dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="2dp"
                    android:includeFontPadding="false"
                    android:text="@string/tv_write_chip"
                    android:textAppearance="@style/Kor.Body1.Bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0" />

                <ImageView
                    android:id="@+id/iv_write_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_down"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_write_chip"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_write_question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="159dp"
                android:includeFontPadding="false"
                android:text="@string/tv_write_question1"
                android:textAppearance="@style/Kor.Body1.Bold"
                app:layout_constraintStart_toStartOf="@+id/cl_write_main"
                app:layout_constraintTop_toBottomOf="@id/cl_write_chip" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edt_write_first_main"
                style="@style/CustomTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FAFAFA"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="@color/blue_200"
                app:boxStrokeWidthFocused="2dp"
                app:counterEnabled="true"
                app:counterMaxLength="200"
                app:errorEnabled="false"
                app:helperText="@null"
                app:helperTextTextAppearance="@style/Kor.Detail1.Regular"
                app:helperTextTextColor="@color/design_default_color_error"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_write_question1"
                app:layout_constraintVertical_bias="0">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_write_question1"
                    android:layout_width="match_parent"
                    android:layout_height="118dp"
                    android:background="@{!vm.isValidquestion1 ? @drawable/rect_red_line_16 : @drawable/sel_register_drawable_custom_edittext, default = @drawable/sel_register_drawable_custom_edittext}"
                    android:gravity="start"
                    android:hint="placeholder 위치, 텍스트박스는 기본 사이즈입니다. 양 옆 마진 16px을 가진 텍스트박스가 존재합니다. "
                    android:scrollbars="vertical"
                    android:selectAllOnFocus="false"
                    android:text="@={vm.question1}" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/tv_write_question2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="142dp"
                android:includeFontPadding="false"
                android:text="@string/tv_write_question2"
                android:textAppearance="@style/Kor.Body1.Bold"
                app:layout_constraintStart_toStartOf="@+id/cl_write_main"
                app:layout_constraintTop_toBottomOf="@id/edt_write_first_main" />

            <!--            <com.google.android.material.textfield.TextInputLayout-->
