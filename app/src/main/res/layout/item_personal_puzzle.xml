<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            >
            <ImageView
                android:id="@+id/iv_personal_puzzle"
                android:layout_width="64dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@null"
                tools:src="@drawable/img_puzzle4" />

            <TextView
                android:id="@+id/tv_personal_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_personal_date"
                android:textColor="@color/blue_500"
                android:layout_marginTop="4dp"
                android:visibility="visible"
                android:textAppearance="@style/Kor.Detail2.Regular"
                app:layout_constraintEnd_toEndOf="@+id/iv_personal_puzzle"
                app:layout_constraintStart_toStartOf="@+id/iv_personal_puzzle"
                app:layout_constraintTop_toBottomOf="@+id/iv_personal_puzzle" />

        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>