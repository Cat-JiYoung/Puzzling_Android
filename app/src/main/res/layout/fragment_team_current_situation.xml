<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.puzzling.puzzlingaos.presentation.team.currentSituation.TeamCurrentSituationViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.team.currentSituation.TeamCurrentSituationFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_team_current"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            app:layout_constraintTop_toTopOf="parent"
            app:contentInsetStart="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btn_team_current_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    android:background="@color/transparent"
                    android:layout_marginTop="48dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/tv_team_projectName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Kor.Heading4"
                    android:textColor="@color/black_000"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="48dp"
                    android:layout_marginStart="86dp"
                    android:includeFontPadding="false"
                    android:text="프로젝트1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_team_current_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:text="프로젝트1"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_team_title_date"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:layout_constraintTop_toBottomOf="@id/tb_team_current"
            >

            <TextView
                android:id="@+id/tv_team_current_yearmonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="23dp"
                android:textAppearance="@style/Kor.Heading2"
                android:textColor="@color/black_000"
                android:includeFontPadding="false"
                android:text="2023년 7월"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="2023년 7월"
                />

            <LinearLayout
                android:id="@+id/layout_week_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_team_current_yearmonth"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/tv_week_mon"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:text="월"
                    android:textAppearance="@style/Kor.Detail1.Regular"
                    android:textColor="@{viewModel.isWeekRetrospectColor ? @color/black_000 : @color/gray_400}"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    />

                <TextView
                    android:id="@+id/tv_week_tue"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:text="화"
                    android:textAppearance="@style/Kor.Detail1.Regular"
                    android:textColor="@{viewModel.isWeekRetrospectColor ? @color/black_000 : @color/gray_400}"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    />

                <TextView
                    android:id="@+id/tv_week_wed"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:text="수"
                    android:textAppearance="@style/Kor.Detail1.Regular"
                    android:textColor="@{viewModel.isWeekRetrospectColor ? @color/black_000 : @color/gray_400}"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    />

                <TextView
                    android:id="@+id/tv_week_thu"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:text="목"
                    android:textAppearance="@style/Kor.Detail1.Regular"
                    android:textColor="@{viewModel.isWeekRetrospectColor ? @color/black_000 : @color/gray_400}"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    />

                <TextView
                    android:id="@+id/tv_week_fri"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:text="금"
                    android:textAppearance="@style/Kor.Detail1.Regular"
                    android:textColor="@{viewModel.isWeekRetrospectColor ? @color/black_000 : @color/gray_400}"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    />

                <TextView
                    android:id="@+id/tv_week_sat"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:text="토"
                    android:textAppearance="@style/Kor.Detail1.Regular"
                    android:textColor="@{viewModel.isWeekRetrospectColor ? @color/black_000 : @color/gray_400}"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    />

                <TextView
                    android:id="@+id/tv_week_sun"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:text="일"
                    android:textAppearance="@style/Kor.Detail1.Regular"
                    android:textColor="@{viewModel.isWeekRetrospectColor ? @color/black_000 : @color/gray_400}"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="17dp"
                app:layout_constraintTop_toBottomOf="@id/layout_week_day"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/iv_week_mon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="7dp"
                    android:src="@drawable/round_white_fill"
                    />
                <!--                android:src="@{viewModel.weekTeamCurrentRound}"-->

                <ImageView
                    android:id="@+id/iv_week_tue"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="7dp"
                    android:src="@drawable/round_blue100_fill"
                    />

                <ImageView
                    android:id="@+id/iv_week_wed"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="7dp"
                    android:src="@drawable/round_white_fill"
                    />

                <ImageView
                    android:id="@+id/iv_week_thu"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="7dp"
                    android:src="@drawable/round_blue100_fill"
                    />

                <ImageView
                    android:id="@+id/iv_week_fri"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="7dp"
                    android:src="@drawable/round_blue400_fill"
                    />

                <ImageView
                    android:id="@+id/iv_week_sat"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="7dp"
                    android:src="@drawable/round_white_fill"
                    />

                <ImageView
                    android:id="@+id/iv_week_sun"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="7dp"
                    android:src="@drawable/round_white_fill"
                    />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_team_this_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="17dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/layout_week_day"
                app:layout_constraintStart_toStartOf="parent"
                tools:listitem="@layout/item_team_this_week"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/layout_team_title_date"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_team_retrospect_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>